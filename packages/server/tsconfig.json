{
  "compilerOptions": {
    "outDir": "dist",
    "sourceMap": true,
    "target": "esnext",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "../" /* Specify the base directory to resolve non-relative module names. */
  }
  // "include": ["./*.js", "src/**/*.ts", "test/**/*.ts"]
}
